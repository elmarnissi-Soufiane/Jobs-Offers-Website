@using Microsoft.AspNet.Identity
@using WebApplication1.Models


@if (Request.IsAuthenticated)
{
    // Verifiction log out .

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoff" }))
    {

        var db = new ApplicationDbContext();

        var UserID = User.Identity.GetUserId();

        var CurrentUser = db.Users.Where(a => a.Id == UserID).SingleOrDefault();

        // Securiser le projet .
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">

            <li class="dropdown">
                <a href="#" class="dropdown dropdown-toggle" data-toggle="dropdown">
                    <span class="glyphicon glyphicon-user"></span>
                    <strong>مرحبا بك يا : @CurrentUser.UserName</strong>
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>

                <ul class="dropdown-menu">
                    <li>
                        <div class="navbar-user">
                            <div class="row">
                                <div class="col-lg-4">
                                    <p class="text-center">
                                        <span class="glyphicon glyphicon-user img-size"></span>
                                    </p>
                                </div>
                                <div class="col-lg-8">
                                    <p class="text-left">
                                        <strong>
                                            @CurrentUser.UserName
                                        </strong>
                                    </p>
                                    @if (CurrentUser.UserType == "الناشرون")
                                    {
                                        <a href="~/Home/GetJobsByPublisher" class="btn btn-success">الوظائف التي قمت بنشرها</a>
                                        <a href="~/Jobs/Create" class="btn btn-info">نشر وظيفة جديدة</a>
                                    }
                                    else
                                    {
                                        <a href="~/Home/GetJobsByUser" class="btn btn-info btn-block">الوظائف التي تقدمت إليها</a>
                                    }

                                    <a href="~/Account/EditProfile" class="btn btn-primary btn-block">تعديل الحساب</a>

                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="divider"></li>

                    <li class="">
                        <div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <p>
                                        <a href="javascript:document.getElementById('logoff').submit()" class="btn btn-danger btn-block">تسجيل الخروج</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </li>

                </ul>

            </li>

            @*<li>
                @Html.ActionLink(" مرحبا بك يا " + User.Identity.GetUserName(), "Index", "Manage")
            </li>
            <li>
                <a href="javascript:document.getElementById('logoff').submit()">تسجيل الخروج</a>
            </li>*@
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">

        <li class="">
            <a href="~/Account/Login"> تسجيل الدخول <i class="glyphicon glyphicon-user"></i></a>
        </li>
        <li class="">
            <a href="~/Account/Register"> إشتراك <i class="glyphicon glyphicon-lock"></i></a>
        </li>

    </ul>
}


