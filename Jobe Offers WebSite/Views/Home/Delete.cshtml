@model Jobe_Offers_WebSite.Models.ApplyForJob

@{
    ViewBag.Title = "حذف الوظيفة";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>حذف وظيفة</h2>

<h3>هل أنت متأكد من حذف هذا النوع؟</h3>
<div>
    <h4>تفاصيل النوع</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.job.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.job.JobTitle)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Message)*@
            نص الرسالة
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.ApplyDate)*@
            تاريخ الإرسال
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplyDate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-danger" /> |
            @Html.ActionLink("العودة إلى القائمة", "GetJobsByUser")
        </div>
    }
</div>
