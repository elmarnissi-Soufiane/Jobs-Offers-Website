
@model IEnumerable<Jobe_Offers_WebSite.Models.JobsViewModel>


@foreach (var gr in Model)
{

    <h3 class="text-center text-success">@gr.JobTitle</h3>

    <table class="table table-bordered table-hover">
        <tr>
            <th>
                إسم الباحث
            </th>
            <th>
                نص الرسالة
            </th>
            <th>
                تاريخ الإرسال
            </th>
        </tr>

        @foreach (var item in gr.Items)
        {
            <tr>
                <td>
                    @item.user.UserName
                </td>
                <td>
                    @item.Message
                </td>
                <td>
                    @item.ApplyDate
                </td>
            </tr>
        }

    </table>
}
