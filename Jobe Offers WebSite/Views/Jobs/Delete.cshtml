@model Jobe_Offers_WebSite.Models.Job

@{
    ViewBag.Title = "حذف الوظيفة";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>حذف وظيفة</h2>

<h3>هل أنت متأكد من حذف هذا النوع؟</h3>
<div>
    <h4>تفاصيل النوع</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobContent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.JobImage)*@
            <img src="~/Uploads/@Html.DisplayFor(model => model.JobImage)"
                 class="thumbnail" style="width:48px; height:48px;" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-default" /> |
            @Html.ActionLink("العودة إلى القائمة", "Index")
        </div>
    }
</div>
